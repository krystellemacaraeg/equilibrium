// Changed currency to PHP and locale to fil-PH for Philippine Peso formatting
export function formatCurrency(value) {
  return new Intl.NumberFormat("fil-PH", {
    style: "currency",
    currency: "PHP",
    minimumFractionDigits: 2,
    maximumFractionDigits: 2,
  }).format(value);
}

// Compact version for the mobile footer
export function formatCompact(value) {
  return new Intl.NumberFormat("fil-PH", {
    style: "currency",
    currency: "PHP",
    notation: "compact",
    maximumFractionDigits: 1,
  }).format(value);
}